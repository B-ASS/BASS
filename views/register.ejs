        <form action="/register" method="post" enctype="multipart/form-data" id="fileForm">
          <input type="file" class="form-control-file" id="fileInput" name="fileInput">
          <!--<button type="submit">전송</button>-->
          <input type="image" id="filePath">
        </form>
      </div>
