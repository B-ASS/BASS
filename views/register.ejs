    <div class="row">
      <div class="col-lg-6 mb-4">
        <form action="/register" name="registerAnimal" method="POST" id="registerForm" novalidate>
          <div class="control-group form-group">
            <div class="controls">
              <label>품종:</label>
              <input type="text" class="form-control" id="breeds" name="breeds" required data-validation-required-message="Please enter breeds of animals.">
              <p class="help-block"></p>
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>성별:</label>
              <input type="text" class="form-control" name="sex" required data-validation-required-message="Please enter sex of animals.">
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>나이:</label>
              <input type="number" class="form-control" name="age" required data-validation-required-message="Please enter age of animals.">
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>지역:</label>
              <input type="text" class="form-control" name="area" required data-validation-required-message="Please enter your area">
            </div>
          </div>
          <div class="control-group form-group">
            <div class="controls">
              <label>가격:</label>
              <input type="number" class="form-control" name="price" required data-validation-required-message="Please enter price">
            </div>
          </div>
        </form>
      </div>
