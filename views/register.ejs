<script>
  

    $('#fileInput').on('change', function () {
        var form = $('#fileForm')[0];
        var formData = new FormData(form);
 
        $.ajax({
            type: 'post',
            url: '/upload',
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                $('#filePath').val(data);
            },
            error: function (err) {
                console.log(err);
            }
        });
    });
</script>


